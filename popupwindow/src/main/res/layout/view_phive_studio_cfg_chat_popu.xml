<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/phive_studio_perm_popu_bg">
    <com.cold.popupwindow.pickerview.lib.WheelView
        android:id="@+id/wv_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:wvTextSize="20sp"
        app:itemsVisible="5"
        android:layout_centerVertical="true" />  <!-- 此属性和textsize决定高度 单数-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/phive_studio_cfg_choose"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"/>
</RelativeLayout>